        <div class="home-options active">
            <select name="" id="font-type">
                <option value="arial">Arial</option>
                <option value="monospace">Monospace</option>
                <option value="cursive">Cursive</option>
                <option value="sans-serif">Sans-Serif</option>
            </select>

            <div class="font-styling">
                <button id="bold"><b>B</b></button>
                <button id="italic"><i>I</i></button>
                <button id="underline"><u>U</u></button>
            </div>

            <select name="" id="font-size">
                <%for(let i=10;i<42;i+=2){%>
                <option value=<%=i%>><%=i%></option>
                <%}%>
                <!-- <option value="10">10</option>
                <option value="12">12</option>
                <option value="14">14</option>
                <option value="16">16</option> -->
            </select>
            <div class="cell-color">
                <!-- https://www.w3schools.com/tags/att_input_type_color.asp#:~:text=The%20%3Cinput%20type%3D%22color,in%20seven%2Dcharacter%20hexadecimal%20notation. -->
                <input type="color" value="#000000" name="" id="cell-font">
                <!-- <div class="div">font</div> -->
                <input type="color" value="#ffffff" name="" id="cell-background">
            </div>

            <div class="alignment">
                <button id="left">L</button>
                <button id="center">C</button>
                <button id="right">R</button>
            </div>


        </div>


