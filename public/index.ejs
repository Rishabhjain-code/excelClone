    <div class="formula-input">
        <img src="./images/formula.png" id="formula-image">
        <input type="text" name="" id="address" disabled>
        <input type="text" id="formula">
    </div>

    <div class="container">
        <div class="content">
            <!-- top left cell -->
            <div class="top-left-cell"></div>

            <!-- top row 26 cols for A,B,C,D...-->
            <div class="top-row">
                <%for(let j=0;j<26;j++){%>
                <div class="top-row-ele" cn=<%=j%>><%=(String.fromCharCode(j+65))%></div>
                <%}%>
            </div>

            <!-- left col-->
            <div class="left-col">
                <%for(let j=0;j<100;j++){%>
                <div class="left-col-ele" rn=<%=j%>><%=(j+1)%></div>
                <%}%>
            </div>

            <div class="cells">
                <!-- using ejs for looping in between the html code like here classes to all-->
                <%for(let i=0;i<100;i++){%>
                <div class="row">
                    <%for(let j=0;j<26;j++){%>
                    <!-- google it -> how to make a div editable in html -->
                    <div contenteditable="true" class="cell" rn=<%=i%> cn=<%=j%>></div>
                    <%}%>
                </div>
                    <%}%>
                </div>
        </div>
    </div>

    <div class="sheets">
        <!-- Sheets -->
        <div class="sheet-list">
            <div class="sheet active-sheet">Sheet 1</div>
